<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:orientation="vertical">

        <com.github.library.bubbleview.BubbleTextVew xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/btv_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:elevation="6dp"
            android:padding="5dp"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:visibility="gone"
            app:angle="8dp"
            app:arrowHeight="8dp"
            app:arrowLocation="left"
            app:arrowPosition="16dp"
            app:arrowWidth="8dp"
            app:bubbleColor="@android:color/holo_blue_light" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:orientation="vertical">

        <com.github.library.bubbleview.BubbleTextVew xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/btv_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:elevation="6dp"
            android:padding="5dp"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:visibility="gone"
            app:angle="8dp"
            app:arrowHeight="8dp"
            app:arrowLocation="right"
            app:arrowPosition="16dp"
            app:arrowWidth="8dp"
            app:bubbleColor="@android:color/holo_green_light" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:visibility="gone" />

</LinearLayout>